{
  "root": true,
  "extends": ["@webpack-contrib/eslint-config-webpack", "prettier"],
  "parser": "@babel/eslint-parser",
  "rules": {
    "import/no-extraneous-dependencies": [
      "error",
      {
        "devDependencies": [
          "**/*.test.js",
          "**/*.spec.js",
          "**/test/**/*.js",
          "**/__tests__/**/*.js",
          "**/__mocks__/**/*.js",
          "**/*.config.js"
        ],
        "optionalDependencies": false,
        "peerDependencies": false
      }
    ]
  }
}
